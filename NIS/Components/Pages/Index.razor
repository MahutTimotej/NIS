@page "/home"
@using Microsoft.EntityFrameworkCore
@inject NIS.Data.NisDbContext Db

<div class="card-nis">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
            <div>
                <h1 class="page-title">Dashboard</h1>
                <p class="page-subtitle">Prehľad systému, rýchle skratky a základné metriky.</p>
            </div>

            <div class="d-flex gap-2">
                <a class="btn btn-nis-primary" href="pacienti">
                    <span class="bi bi-person-plus-fill me-2"></span> Pacienti
                </a>
                <a class="btn btn-nis-accent" href="vysetrenia">
                    <span class="bi bi-clipboard2-plus-fill me-2"></span> Nové vyšetrenie
                </a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row g-3">
            <div class="col-12 col-md-4">
                <div class="card-nis">
                    <div class="card-body kpi">
                        <div class="kpi-icon"><span class="bi bi-person-heart"></span></div>
                        <div>
                            <p class="kpi-value">@_pacienti</p>
                            <p class="kpi-label">Pacienti</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="card-nis">
                    <div class="card-body kpi">
                        <div class="kpi-icon"><span class="bi bi-heart-pulse"></span></div>
                        <div>
                            <p class="kpi-value">@_lekari</p>
                            <p class="kpi-label">Lekári</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="card-nis">
                    <div class="card-body kpi">
                        <div class="kpi-icon"><span class="bi bi-clipboard2-pulse"></span></div>
                        <div>
                            <p class="kpi-value">@_vysetrenia</p>
                            <p class="kpi-label">Vyšetrenia</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr class="hr-soft" />

        <div class="row g-3">
            <div class="col-12 col-lg-6">
                <div class="card-nis">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="fw-bold">Rýchle odkazy</div>
                        <span class="badge badge-accent">Najčastejšie</span>
                    </div>
                    <div class="card-body d-flex flex-wrap gap-2">
                        <a class="btn btn-nis-outline" href="oddelenia"><span class="bi bi-hospital me-2"></span>Oddelenia</a>
                        <a class="btn btn-nis-outline" href="prijmy"><span class="bi bi-door-open me-2"></span>Príjmy</a>
                        <a class="btn btn-nis-outline" href="operacie"><span class="bi bi-scissors me-2"></span>Operácie</a>
                        <a class="btn btn-nis-outline" href="predpisy"><span class="bi bi-receipt me-2"></span>Predpisy</a>
                        <a class="btn btn-nis-outline" href="lieky"><span class="bi bi-capsule me-2"></span>Lieky</a>
                        <a class="btn btn-nis-outline" href="diagnozy"><span class="bi bi-bug me-2"></span>Diagnózy</a>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="card-nis">
                    <div class="card-header fw-bold">Stav databázy</div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Schéma</span>
                            <span class="fw-bold">NIS</span>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <span class="text-muted">Pripojenie</span>
                            <span class="fw-bold">Oracle XE (XEPDB1)</span>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <span class="text-muted">Posledná aktualizácia</span>
                            <span class="fw-bold">@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(_error))
        {
            <div class="alert alert-danger mt-3">
                <b>Chyba:</b> @_error
            </div>
        }
    </div>
</div>

@code {
    private int _pacienti;
    private int _lekari;
    private int _vysetrenia;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _pacienti = await Db.N_PACIENTs.CountAsync();
            _lekari = await Db.N_LEKARs.CountAsync();
            _vysetrenia = await Db.N_VYSETRENIEs.CountAsync();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }
}
