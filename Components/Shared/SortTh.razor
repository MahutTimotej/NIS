<th scope="col" class="nis-th">
    <button type="button" class="btn btn-link nis-th-btn" @onclick="() => OnSort.InvokeAsync(Column)">
        <span>@Title</span>
        <span class="ms-1 bi @IconClass" aria-hidden="true"></span>
    </button>
</th>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Column { get; set; } = "";
    [Parameter] public string SortColumn { get; set; } = "";
    [Parameter] public bool SortAsc { get; set; } = true;
    [Parameter] public EventCallback<string> OnSort { get; set; }

    private string IconClass =>
        SortColumn != Column
            ? "bi-arrow-down-up"
            : (SortAsc ? "bi-sort-down" : "bi-sort-up");
}
