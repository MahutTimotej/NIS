@page "/operacie"
@inject NisDbContext Db

<h3>Operácie</h3>

@if (items is null)
{
    <p>Načítavam...</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Pacient (ID)</th>
                <th>Lekár (ID)</th>
                <th>Dátum</th>
                <th>Typ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in items)
            {
                <tr>
                    <td>@o.ID_OPERACIE</td>
                    <td>@o.ID_PACIENTA</td>
                    <td>@o.ID_LEKARA</td>
                    <td>@o.DATUM_OPERACIE</td>
                    <td>@o.TYP_OPERACIE</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<N_OPERACIum>? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Db.N_OPERACIAs.AsNoTracking().ToListAsync();
    }
}
