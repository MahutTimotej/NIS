@page "/pacienti"
@inject NisDbContext Db

<h3>Pacienti</h3>

@if (items is null)
{
    <p>Načítavam...</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Rodné číslo</th>
                <th>Poistovňa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in items)
            {
                <tr>
                    <td>@p.ID_PACIENTA</td>
                    <td>@p.RODNE_CISLO</td>
                    <td>@p.POISTOVNA</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<N_PACIENT>? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Db.N_PACIENTs.AsNoTracking().ToListAsync();
    }
}
