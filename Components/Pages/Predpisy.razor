@page "/predpisy"
@inject NisDbContext Db

<h3>Predpisy</h3>

@if (items is null)
{
    <p>Načítavam...</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Vyšetrenie (ID)</th>
                <th>SUKL kód</th>
                <th>Dátum</th>
                <th>Dávkovanie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in items)
            {
                <tr>
                    <td>@p.ID_PREDPISU</td>
                    <td>@p.ID_VYSETRENIA</td>
                    <td>@p.SUKL_KOD</td>
                    <td>@p.DATUM_PREDPISU</td>
                    <td>@p.DAVKOVANIE</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<N_PREDPI>? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Db.N_PREDPIs.AsNoTracking().ToListAsync();
    }
}
