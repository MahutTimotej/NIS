@page "/sestry"
@inject NisDbContext Db

<h3>Sestry</h3>

@if (items is null)
{
    <p>Načítavam...</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Rodné číslo</th>
                <th>Oddelenie (ID)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in items)
            {
                <tr>
                    <td>@s.ID_SESTRY</td>
                    <td>@s.RODNE_CISLO</td>
                    <td>@s.ID_ODDELENIA</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<N_SESTRA>? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Db.N_SESTRAs.AsNoTracking().ToListAsync();
    }
}
