@page "/kontakty"
@inject NisDbContext Db

<h3>Kontakty</h3>

@if (items is null)
{
    <p>Načítavam...</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Rodné číslo</th>
                <th>Email</th>
                <th>Telefón</th>
                <th>Telefón práca</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var k in items)
            {
                <tr>
                    <td>@k.ID_KONTAKTU</td>
                    <td>@k.RODNE_CISLO</td>
                    <td>@k.EMAIL</td>
                    <td>@k.TELEFON</td>
                    <td>@k.TELEFON_PRACA</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<N_KONTAKT>? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Db.N_KONTAKTs.AsNoTracking().ToListAsync();
    }
}
