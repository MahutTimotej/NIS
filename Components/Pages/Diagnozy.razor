@page "/diagnozy"
@using Microsoft.EntityFrameworkCore
@using NIS.Data
@using NIS.Components.Shared
@inject NisDbContext Db

<div class="d-flex flex-wrap gap-2 align-items-center justify-content-between mb-3">
    <div>
        <h3 class="mb-0">Diagnózy</h3>
        <div class="nis-muted small">Vyhľadávanie a zoradenie podľa stĺpcov.</div>
    </div>

    <div class="d-flex gap-2 align-items-center">
        <div class="input-group" style="min-width: 320px;">
            <span class="input-group-text"><span class="bi bi-search"></span></span>
            <input class="form-control"
                   placeholder="Hľadať (ID, kód, názov)..."
                   @bind-value="_q"
                   @bind-value:event="oninput" />
            <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch" disabled="@string.IsNullOrWhiteSpace(_q)">
                <span class="bi bi-x-lg"></span>
            </button>
        </div>

        <span class="nis-tag">@View.Count() záznamov</span>
    </div>
</div>

@if (items is null)
{
    <p>Načítavam...</p>
}
else
{
    <div class="card-nis">
        <div class="card-body">
            <table class="table table-sm align-middle mb-0">
                <thead>
                    <tr>
                        <SortTh Title="ID" Column="ID" SortColumn="_sortCol" SortAsc="_sortAsc" OnSort="ToggleSort" />
                        <SortTh Title="Kód" Column="KOD" SortColumn="_sortCol" SortAsc="_sortAsc" OnSort="ToggleSort" />
                        <SortTh Title="Názov" Column="NAZOV" SortColumn="_sortCol" SortAsc="_sortAsc" OnSort="ToggleSort" />
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in View)
                    {
                        <tr>
                            <td>@d.ID_DIAGNOZY</td>
                            <td>@d.KOD</td>
                            <td>@d.NAZOV</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private List<N_DIAGNOZA>? items;

    private string _q = "";
    private string _sortCol = "ID";
    private bool _sortAsc = true;

    protected override async Task OnInitializedAsync()
    {
        items = await Db.N_DIAGNOZAs.AsNoTracking().ToListAsync();
    }

    private void ClearSearch() => _q = "";

    private void ToggleSort(string col)
    {
        if (_sortCol == col) _sortAsc = !_sortAsc;
        else { _sortCol = col; _sortAsc = true; }
    }

    private IEnumerable<N_DIAGNOZA> View
    {
        get
        {
            if (items is null) return Enumerable.Empty<N_DIAGNOZA>();

            IEnumerable<N_DIAGNOZA> q = items;

            // filter
            if (!string.IsNullOrWhiteSpace(_q))
            {
                var s = _q.Trim().ToLowerInvariant();
                q = q.Where(d =>
                    d.ID_DIAGNOZY.ToString().Contains(s) ||
                    (d.KOD ?? "").ToLowerInvariant().Contains(s) ||
                    (d.NAZOV ?? "").ToLowerInvariant().Contains(s));
            }

            // sort
            q = (_sortCol, _sortAsc) switch
            {
                ("ID", true) => q.OrderBy(x => x.ID_DIAGNOZY),
                ("ID", false) => q.OrderByDescending(x => x.ID_DIAGNOZY),

                ("KOD", true) => q.OrderBy(x => x.KOD),
                ("KOD", false) => q.OrderByDescending(x => x.KOD),

                ("NAZOV", true) => q.OrderBy(x => x.NAZOV),
                ("NAZOV", false) => q.OrderByDescending(x => x.NAZOV),

                _ => q
            };

            return q;
        }
    }
}
