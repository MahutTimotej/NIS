@page "/lekari"
@inject NisDbContext Db

<h3>Lekári</h3>

@if (items is null)
{
    <p>Načítavam...</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Rodné číslo</th>
                <th>Špecializácia (ID)</th>
                <th>Oddelenie (ID)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in items)
            {
                <tr>
                    <td>@l.ID_LEKARA</td>
                    <td>@l.RODNE_CISLO</td>
                    <td>@l.ID_SPECIALIZACIE</td>
                    <td>@l.ID_ODDELENIA</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<N_LEKAR>? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Db.N_LEKARs.AsNoTracking().ToListAsync();
    }
}
